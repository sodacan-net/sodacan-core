// A comment
UNIT lamp1
  EVENT next,on,off	// expands to lamp1.event.next, lamp1.event.on, etc.
  STATE on,off		// expands to lamp1.state.on, etc
  WHEN event.next -> state
  WHEN event.on AND NOT state.on -> state=on
  WHEN event.off AND NOT state.off -> state=off

// Another comment
UNIT lamp2 LIKE lamp1
	EVENT auto

